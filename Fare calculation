Scanner scan = new Scanner(System.in);
	int adet;
	double  fiyat;
	double toplamücret;
	
	System.out.print("kaç adet ürün alacaksınız: ");
    adet = scan.nextInt();
     System.out.print("alacağınız ürünün fiyatı nedir: ");
      fiyat =scan.nextDouble();
      
      
      
      if ( 31<= adet) {
    	  toplamücret = adet*fiyat*65/100;
    	  System.out.println("ödemeniz gereken tutar: " + toplamücret);
    	  }
      
       
      else    if (30>=adet && adet>=21) {
    	  toplamücret = adet*fiyat*70/100;
    	  System.out.println("ödemeniz gereken tutar: " + toplamücret);
          }
      
      
       else   if (20>= adet && adet>=11) {
    	  toplamücret = adet*fiyat*80/100;
    	  System.out.println("ödemeniz gereken tutar: " + toplamücret);
      }
    	  
       else if (10>=adet && adet>=6) {
    	  toplamücret = adet*fiyat*90/100;
    	  System.out.println("ödemeniz gereken tutar: " + toplamücret);
      }
    		
       if (6> adet) {
    		  toplamücret = adet*fiyat;
    		  System.out.println("ödemeniz gereken tutar: " + toplamücret);
       }
	}
}


